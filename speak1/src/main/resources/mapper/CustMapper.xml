	<!-- 删除一个客户 -->
	<delete id="deleteCust">
		delete customers where identity = #{_parameter}
	</delete>
	
	<!-- 修改1  先查询一个 -->
	<select id="findOne" resultType="cn.accp.pigcar.pojo.Customers">
		select * from customers where identity = #{_parameter}
	</select>
	
	<select id="findOne1" resultType="cn.accp.pigcar.pojo.Customers">
		select * from customers where identity = #{_parameter}
	</select>
	
	
	<!-- 修改2   执行update -->
	<update id="updateCust">
		update customers c
			<set>
			 	<if test="custname != null and custname !=''">
			 		custname = #{custname},
			 	</if>
			 	<if test="phone != null and phone !=''">
			 		phone = #{phone},
			 	</if>
			 	<if test="career != null and career !=''">
			 		career = #{career},
			 	</if>
			 	<if test="address != null and address !=''">
			 		address = #{address},
			 	</if>
			 	<if test="sex != null and sex !=''">
			 		and  sex = #{sex},
			 	</if>
			 	<if test="custpwd != null and custpwd !=''">
			 		custpwd = #{custpwd},
			 	</if>
		 	</set>
			<!-- custname = #{custname},sex = #{sex},address = #{address},phone = #{phone},
			career = #{career},custpwd = #{custpwd} -->
				where c.identity = #{identity}
	</update>
	
