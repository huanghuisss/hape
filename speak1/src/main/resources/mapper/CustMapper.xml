		 	</if>
		 	<if test="address != null and address !=''">
		 		and  address like '%'||#{address}||'%'
		 	</if>
		 	<if test="sex != null and sex !=''">
		 		and  sex = #{sex}
		 	</if>
		 </where>
			) t where rownum &lt;= #{end})
